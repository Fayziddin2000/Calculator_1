<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#22252d"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="18dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:srcCompat="@drawable/clipart91296" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginStart="60dp"
            app:srcCompat="@drawable/klipartz_com" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="480dp"
        app:cardBackgroundColor="#00FFFFFF"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_for_card_view">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_1"
                style="@style/CalcButtons"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="32dp"
                app:layout_constraintBottom_toTopOf="@+id/cv_5"
                app:layout_constraintEnd_toStartOf="@+id/cv_2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" >

                <TextView
                    android:id="@+id/clear"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="AC"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="#10c0ff"
                    android:textSize="34sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_2"
                style="@style/CalcButtons"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="32dp"
                app:layout_constraintBottom_toTopOf="@+id/cv_6"
                app:layout_constraintEnd_toStartOf="@+id/cv_3"
                app:layout_constraintStart_toEndOf="@+id/cv_1"
                app:layout_constraintTop_toTopOf="parent"

                    >

                <TextView
                    android:id="@+id/plusandminus"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#10c0ff"
                    android:textSize="36sp"
                    android:text="±" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_3"
                style="@style/CalcButtons"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="32dp"
                app:layout_constraintBottom_toTopOf="@+id/cv_7"
                app:layout_constraintEnd_toStartOf="@+id/cv_4"
                app:layout_constraintStart_toEndOf="@+id/cv_2"
                app:layout_constraintTop_toTopOf="parent"
                >
                <TextView
                    android:id="@+id/percent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#10c0ff"
                    android:textSize="36sp"
                    android:text="%" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_4"
                style="@style/CalcButtons"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="28dp"
                app:layout_constraintBottom_toTopOf="@+id/cv_8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/cv_3"
                app:layout_constraintTop_toTopOf="parent" >
                <TextView
                    android:id="@+id/devide"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#f04075"
                    android:textSize="36sp"
                    android:text="÷" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_5"
                style="@style/CalcButtons"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:layout_constraintBottom_toTopOf="@+id/cv_9"
                app:layout_constraintEnd_toEndOf="@+id/cv_1"
                app:layout_constraintStart_toStartOf="@+id/cv_1"
                app:layout_constraintTop_toBottomOf="@+id/cv_1" >
                <TextView
                    android:id="@+id/seven"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="36sp"
                    android:text="7" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_6"
                style="@style/CalcButtons"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:layout_constraintBottom_toTopOf="@+id/cv_10"
                app:layout_constraintEnd_toEndOf="@+id/cv_2"
                app:layout_constraintStart_toStartOf="@+id/cv_2"
                app:layout_constraintTop_toBottomOf="@+id/cv_2" >
                <TextView
                    android:id="@+id/eight"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="36sp"
                    android:text="8" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_7"
                style="@style/CalcButtons"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:layout_constraintBottom_toTopOf="@+id/cv_12"
                app:layout_constraintEnd_toEndOf="@+id/cv_3"
                app:layout_constraintStart_toStartOf="@+id/cv_3"
                app:layout_constraintTop_toBottomOf="@+id/cv_3" >
                <TextView
                    android:id="@+id/nine"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="36sp"
                    android:text="9" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_8"
                style="@style/CalcButtons"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:layout_constraintBottom_toTopOf="@+id/cv_13"
                app:layout_constraintEnd_toEndOf="@+id/cv_4"
                app:layout_constraintStart_toStartOf="@+id/cv_4"
                app:layout_constraintTop_toBottomOf="@+id/cv_4" >
                <TextView
                    android:id="@+id/multiply"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#f04075"
                    android:textSize="36sp"
                    android:text="×" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_9"
                style="@style/CalcButtons"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:layout_constraintBottom_toTopOf="@+id/cv_14"
                app:layout_constraintEnd_toEndOf="@+id/cv_5"
                app:layout_constraintStart_toStartOf="@+id/cv_5"
                app:layout_constraintTop_toBottomOf="@+id/cv_5" >
                <TextView
                    android:id="@+id/six"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="36sp"
                    android:text="6" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_10"
                style="@style/CalcButtons"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:layout_constraintBottom_toTopOf="@+id/cv_15"
                app:layout_constraintEnd_toEndOf="@+id/cv_6"
                app:layout_constraintStart_toStartOf="@+id/cv_6"
                app:layout_constraintTop_toBottomOf="@+id/cv_6" >
                <TextView
                    android:id="@+id/five"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="36sp"
                    android:text="5" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_12"
                style="@style/CalcButtons"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:layout_constraintBottom_toTopOf="@+id/cv_16"
                app:layout_constraintEnd_toEndOf="@+id/cv_7"
                app:layout_constraintStart_toStartOf="@+id/cv_7"
                app:layout_constraintTop_toBottomOf="@+id/cv_7" >
                <TextView
                    android:id="@+id/four"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="36sp"
                    android:text="4" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_13"
                style="@style/CalcButtons"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:layout_constraintBottom_toTopOf="@+id/cv_17"
                app:layout_constraintEnd_toEndOf="@+id/cv_8"
                app:layout_constraintStart_toStartOf="@+id/cv_8"
                app:layout_constraintTop_toBottomOf="@+id/cv_8" >
                <TextView
                    android:id="@+id/minus"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#f04075"
                    android:textSize="36sp"
                    android:text="-" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_14"
                style="@style/CalcButtons"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:layout_constraintBottom_toTopOf="@+id/cv_18"
                app:layout_constraintEnd_toEndOf="@+id/cv_9"
                app:layout_constraintStart_toStartOf="@+id/cv_9"
                app:layout_constraintTop_toBottomOf="@+id/cv_9" >
                <TextView
                    android:id="@+id/three"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="36sp"
                    android:text="3" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_15"
                style="@style/CalcButtons"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:layout_constraintBottom_toTopOf="@+id/cv_19"
                app:layout_constraintEnd_toEndOf="@+id/cv_10"
                app:layout_constraintStart_toStartOf="@+id/cv_10"
                app:layout_constraintTop_toBottomOf="@+id/cv_10" >
                <TextView
                    android:id="@+id/two"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="36sp"
                    android:text="2" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_16"
                style="@style/CalcButtons"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:layout_constraintBottom_toTopOf="@+id/cv_20"
                app:layout_constraintEnd_toEndOf="@+id/cv_12"
                app:layout_constraintStart_toStartOf="@+id/cv_12"
                app:layout_constraintTop_toBottomOf="@+id/cv_12" >
                <TextView
                    android:id="@+id/one"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="36sp"
                    android:text="1" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_17"
                style="@style/CalcButtons"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:layout_constraintBottom_toTopOf="@+id/cv_21"
                app:layout_constraintEnd_toEndOf="@+id/cv_13"
                app:layout_constraintStart_toStartOf="@+id/cv_13"
                app:layout_constraintTop_toBottomOf="@+id/cv_13" >
                <TextView
                    android:id="@+id/plus"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#f04075"
                    android:textSize="36sp"
                    android:text="+" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_18"
                style="@style/CalcButtons"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginBottom="42dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/cv_14"
                app:layout_constraintStart_toStartOf="@+id/cv_14"
                app:layout_constraintTop_toBottomOf="@+id/cv_14" >

                <ImageView
                    android:id="@+id/reload"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    app:srcCompat="@drawable/pngegg" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_19"
                style="@style/CalcButtons"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginBottom="42dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/cv_15"
                app:layout_constraintStart_toStartOf="@+id/cv_15"
                app:layout_constraintTop_toBottomOf="@+id/cv_15" >
                <TextView
                    android:id="@+id/zero"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="36sp"
                    android:text="0" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_20"
                style="@style/CalcButtons"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginBottom="42dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/cv_16"
                app:layout_constraintStart_toStartOf="@+id/cv_16"
                app:layout_constraintTop_toBottomOf="@+id/cv_16" >
                <TextView
                    android:id="@+id/point"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="36sp"
                    android:text="." />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_21"
                style="@style/CalcButtons"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginBottom="42dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/cv_17"
                app:layout_constraintStart_toStartOf="@+id/cv_17"
                app:layout_constraintTop_toBottomOf="@+id/cv_17" >
                <TextView
                    android:id="@+id/equal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#f04075"
                    android:textSize="36sp"
                    android:text="=" />
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="32dp"
        android:textSize="46sp"
        android:textColor="@android:color/white"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/cardView"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/working"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="28dp"
        app:layout_constraintBottom_toTopOf="@+id/result"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>